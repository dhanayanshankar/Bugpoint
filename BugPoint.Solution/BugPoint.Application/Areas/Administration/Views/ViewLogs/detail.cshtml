
@model BugPoint.Model.ApplicationLog.NLogModel

<div class="row">
<div class="col-md-9">
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-bug"></i> Error View
        </h3>
    </div>

    <div class="card-body" style="display: block;">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="@Model.MachineName"></label>
                <h5> @Model.MachineName</h5>

            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Logged"></label><br />
                @Model.Logged
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@Model.Level"></label><br />
                @Model.Level
            </div>
          
        </div>
        <hr />

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Message"></label>
                <p>
                    @Html.Raw(Model.Message)
                </p>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Logger"></label>
                <p>
                    @Html.Raw(Model.Logger)
                </p>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Properties"></label>
                <p>
                    @Html.Raw(Model.Properties)
                </p>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Callsite"></label>
                <p>
                    @Html.Raw(Model.Callsite)
                </p>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Exception"></label>
                <p>
                    @Html.Raw(Model.Exception)
                </p>
            </div>
        </div>
        
    </div>
    <div class="card-footer">

    </div>
</div>
</div>
</div>