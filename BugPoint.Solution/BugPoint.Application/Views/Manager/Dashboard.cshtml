<script>


    $(document).ready(function () {
        $("#loader").show();
        bindpiedata();
        binddata();
        bindPiePriorityCharttdata();
     
        bindHardwareDetailsdata();
        bindpiebrowserdata();
        bindVersionDetailsdata();
        bindOperatingSystemdata();
        bindWebFrameworkdata();

        $("#ProjectId").change(function () {
            if ($("#ProjectId").val() == "") {
                $.alert({
                    title: 'Validation!',
                    content: 'Please Choose Project.',
                    type: 'red'
                });
            } else {
                $("#loader").show();
                bindpiedata();
                bindPiePriorityCharttdata();
           
