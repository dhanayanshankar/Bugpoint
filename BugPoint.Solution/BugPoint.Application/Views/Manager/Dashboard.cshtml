        $.ajax({
            type: "POST",
            url: "/Manager/GetStatusWiseBugsCount",
            dataType: "json",
            data: jsonObject,

            success: function (data, textStatus, xhr) {
                if (data.length != 0) {
                    $("#OpenSpan").empty();
                    $("#ConfirmedSpan").empty();
                    $("#InProgressSpan").empty();
                    $("#ReOpenedSpan").empty();
                    $("#ResolvedSpan").empty();
                    $("#InTestingSpan").empty();
                    $("#ClosedSpan").empty();
                    $("#OnHoldSpan").empty();
                    $("#OnRejectedSpan").empty();
                    $("#OnReplySpan").empty();
                    $("#DuplicateSpan").empty();
                    $("#UnConfirmedSpan").empty();

